# üóÑÔ∏è Configuraci√≥n personalizada MySQL para DemoMixto
# Este archivo proporciona configuraciones optimizadas para el contenedor

[mysqld]
# ============================================================================
# CONFIGURACI√ìN B√ÅSICA
# ============================================================================
# Configuraci√≥n de caracteres
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci
init-connect = 'SET NAMES utf8mb4'

# Configuraci√≥n de zona horaria
default-time-zone = '-05:00'

# ============================================================================
# CONFIGURACI√ìN DE RENDIMIENTO
# ============================================================================
# Buffer pool - ajustado para contenedores con memoria limitada
innodb_buffer_pool_size = 128M
innodb_buffer_pool_instances = 1

# Configuraci√≥n de conexiones
max_connections = 50
max_user_connections = 45

# Configuraci√≥n de logs
innodb_log_file_size = 48M
innodb_log_buffer_size = 16M

# Configuraci√≥n de tablas
innodb_file_per_table = 1
innodb_flush_log_at_trx_commit = 2

# ============================================================================
# CONFIGURACI√ìN DE SEGURIDAD
# ============================================================================
# Autenticaci√≥n
default_authentication_plugin = mysql_native_password

# Configuraci√≥n de SSL (deshabilitado para desarrollo)
skip_ssl

# ============================================================================
# CONFIGURACI√ìN DE LOGGING
# ============================================================================
# General log (deshabilitado para rendimiento)
general_log = 0

# Slow query log (habilitado para debugging)
slow_query_log = 1
long_query_time = 2
slow_query_log_file = /var/log/mysql/mysql-slow.log

# Error log
log_error = /var/log/mysql/error.log

# ============================================================================
# CONFIGURACI√ìN DE BINARY LOG
# ============================================================================
# Deshabilitado para desarrollo (ahorra espacio)
skip-log-bin

# ============================================================================
# CONFIGURACI√ìN DE NETWORKING
# ============================================================================
# Configuraci√≥n de red para contenedores
bind-address = 0.0.0.0
port = 3306

# Timeouts optimizados para contenedores
wait_timeout = 600
interactive_timeout = 600
connect_timeout = 60

# ============================================================================
# CONFIGURACI√ìN DE CACHE
# ============================================================================
# Query cache (deshabilitado en MySQL 8.0+)
# query_cache_type = 0
# query_cache_size = 0

# Table cache
table_open_cache = 64
table_definition_cache = 256

# ============================================================================
# CONFIGURACI√ìN TEMPORAL
# ============================================================================
# Configuraci√≥n de tmp tables
tmp_table_size = 32M
max_heap_table_size = 32M

# ============================================================================
# CONFIGURACI√ìN INNODB ESPEC√çFICA
# ============================================================================
# Configuraci√≥n de flush
innodb_flush_method = O_DIRECT

# Configuraci√≥n de threads
innodb_read_io_threads = 4
innodb_write_io_threads = 4

# Configuraci√≥n de lock
innodb_lock_wait_timeout = 50

[mysql]
# Configuraci√≥n del cliente MySQL
default-character-set = utf8mb4

[client]
# Configuraci√≥n del cliente gen√©rico
default-character-set = utf8mb4
port = 3306